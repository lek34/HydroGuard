                <TextView
                    android:id="@+id/tvEditTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Title" />

                <EditText
                    android:id="@+id/etEditTitle"
                    style="@style/edittext"
